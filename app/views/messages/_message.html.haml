.message-items
  .Message-info
    .Message-info__user-name
      = message.user.name
    .Message-info__date-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-comment
    - if message.content.present?
      %p.message-content
        = message.content
    = image_tag message.image.url, class: "message-image" if message.image.present?